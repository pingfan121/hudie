<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_mod_ground">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="#cf442b">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_head"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/face"
            app:riv_border_color="@color/app_black"
            app:riv_border_width="2dp"
            app:riv_oval="true"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/menu_item_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:divider="#00000000"
            android:dividerHeight="1dp"
            />

        <ListView
            android:id="@+id/menu_item_list2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:divider="#00000000"
            android:dividerHeight="1dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/menu_item_list3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:divider="#00000000"
        android:dividerHeight="1dp"/>


</LinearLayout>
